<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView12"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="레스토랑을 시작하려면 아래를 클릭하세요." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switch3"
            android:textSize="17dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시작함" />

        <Chronometer
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:id="@+id/chronometer5"
            android:visibility="invisible"
            android:format="예약시작 경과시간 %s"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:visibility="invisible"
        android:background="#ffD2D2">

        <DatePicker
            android:id="@+id/datePicker3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <TimePicker
            android:id="@+id/timePicker2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_gravity="center"/>

        <GridLayout
            android:id="@+id/gin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:rowCount="3"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textView15"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="성인 : " />

            <TextView
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="청소년 : " />

            <TextView
                android:id="@+id/textView13"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="어린이 : " />

            <EditText
                android:id="@+id/editText6"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="숫자 입력"
                android:inputType="number" />

            <EditText
                android:id="@+id/editText5"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="숫자 입력"
                android:inputType="number" />

            <EditText
                android:id="@+id/editText4"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="숫자입력"
                android:inputType="number" />
        </GridLayout>

        <GridLayout
            android:id="@+id/gout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:columnCount="2"
            android:orientation="vertical"
            android:visibility="invisible"
            android:rowCount="7">

            <TextView
                android:id="@+id/textView16"
                android:textSize="26dp"
                android:textColor="#003cff"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:padding="10dp"
                android:text="예약 결과는 다음과 같습니다." />

            <TextView
                android:id="@+id/textView17"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="날짜 : " />


            <TextView
                android:id="@+id/textView19"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간 : " />


            <TextView
                android:id="@+id/textView21"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성인 : " />


            <TextView
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:text="0명" />

            <TextView
                android:id="@+id/textView26"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:text="0명" />

            <TextView
                android:id="@+id/textView20"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:text="00시 00분" />

            <TextView
                android:id="@+id/textView18"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:text="0000년 00월 00일" />



            <TextView
                android:id="@+id/textView27"
                android:textColor="#c70000"
                android:textSize="27dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:text="예약되었습니다." />

            <TextView
                android:id="@+id/textView25"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:text="어린이 : " />

            <TextView
                android:id="@+id/textView10"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="청소년 : " />

            <TextView
                android:id="@+id/textView23"
                android:textSize="20dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:text="0명" />

        </GridLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button14"
            android:onClick="back"
            android:enabled="false"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전" />

        <Button
            android:id="@+id/button13"
            android:onClick="gogo"
            android:enabled="false"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다음" />
    </LinearLayout>

</LinearLayout>